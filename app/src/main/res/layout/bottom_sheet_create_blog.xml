        <!-- Blog Title -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blog Title"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/primary_color"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/blogTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:textColor="@color/secondary_color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Blog Content -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your blog content..."
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/primary_color"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/blogContentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:layout_gravity="top"

                android:textColor="@color/secondary_color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Publish Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/postBlogButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish Blog"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/pen_edit_svg"
            app:iconTint="@android:color/white"
            app:iconSize="24dp"
            app:iconPadding="12dp"
            app:strokeColor="@color/primary_color"
            app:strokeWidth="0dp" />

    </LinearLayout>
